--Listing the Topics available in Kafka:
    cd C:\Software\Apache\kafka_2.12-2.1.1\bin\windows >
        kafka-topics.bat --list --zookeeper localhost:2181

--delete kafka topic
    cd C:\Software\Apache\kafka_2.12-2.1.1\bin\windows
        kafka-topics.bat --delete --zookeeper localhost:2181 --topic your_topic_name

--enable in server.properties
#Enable delete topic
delete.topic.enable=true